		ft_strtrim.c \
		ft_strtrimc.c \
		ft_tolower.c \
		ft_toupper.c \
		get_next_line.c

OBJET = $(SRCS:.c=.o)

CC = gcc

CFLAGS = -Wall -Wextra -Werror

all: $(NAME)

%.o: %.c libft.h
	$(CC) $(CFLAGS) -o $@ -c $<

$(NAME): $(OBJET)
	ar rc $(NAME) $(OBJET) 
	ranlib $(NAME)

clean:
	rm -f $(OBJET)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re